.l-main
	.l-main--inner
		- page.posts.each(function(post) {
		div
			a(href="#{post.path}").box-href
				.postHeader_index
					p.postHeader--date_index #{post.date.format(config.date_format)}
					h2.postHeader--title #{post.title}
					p.postHeader--desc #{post.wrap_up}
			- if (post.tags && post.tags.length) {
				.postHeader--tags
					- post.tags.each(function(tag){
						a.postHeader--tag(href="#{tag.path}") #{tag.name}
					- });
			- };
		- });